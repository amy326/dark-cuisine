<div class="panel panel-default panel-log-1">
  <div class="panel-body  panel-log-2">
    <img src='<%= image_url 'logo1.png' %>' class="img-log-2">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "输入邮箱" %>
        <%= f.input :password, required: false, autofocus: true, label: false, placeholder: "密码" %>
      </div>
      <div style="text-align:left;">
        <%= f.input :remember_me, label: "七天内自动登录", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "登录" %>
      </div>
    <% end %>
    <br>
    <%= link_to("注册", new_user_registration_path) %>
    <!-- <#%= render "devise/shared/links" %> -->
  </div>
</div>


