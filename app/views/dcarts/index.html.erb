<div class="row">
  <div class="col-md-12">
		<%= link_to("清空购物车", clean_dcarts_path ,
              method: :delete , class: "pull-right",
              style: "text-decoration: underline;",
              data: { confirm: "不要碗里要锅里的？？"} )%>

    <h2> 碗里 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">底料们</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作选项 </th>
        </tr>
      </thead>
      <tbody>

        <% current_dcart.dcart_items.each do |dcart_item| %>
          <tr>
            <td>
              <%= link_to dproduct_path(dcart_item.dproduct) do %>
                <% if dcart_item.dproduct.image.present? %>
                  <%= image_tag(dcart_item.dproduct.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(dcart_item.dproduct.title, dproduct_path(dcart_item.dproduct)) %>
            </td>
            <td>
              <%= dcart_item.dproduct.price %>
            </td>
            <td>
              <%= form_for dcart_item, url: dcart_item_path(dcart_item.dproduct_id) do |f| %>
                <%= f.select :quantity, 1..dcart_item.dproduct.quantity %>
                <%= f.submit "更新", data: { disable_with: "Submiting..." } %>
              <% end %>
            </td>
            <td>
              <%= link_to dcart_item_path(dcart_item.dproduct_id), method: :delete do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>

          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span>
					总计 <%= render_dcart_total_price(current_dcart) %> RMB
				</span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("可以进厨房了", "checkout_dcarts_path", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
