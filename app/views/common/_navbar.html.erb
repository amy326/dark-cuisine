<div class="container-fluid">
  <div class="row row-nav-1">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <ul><!--==注册/登录===-->
        <% if !current_user %>
          <%= link_to("注册", new_user_registration_path, class: "pull-right", id: "font-nav-1") %>
          <%= link_to("登录", new_user_session_path, class: "pull-right posi-nav-1", id: "font-nav-1") %>
        <% else %>
          <div class="dropdown">
            <a href="#" class="dropdown-toggle pull-right" data-toggle="dropdown" id= "font-nav-1">
              Hi!, <%= current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu pull-right" id= "font-nav-1">
              <% if current_user.admin? %>
                <li>
                  <%= link_to("Admin 选单", admin_products_path ) %>
                </li>



                <li>
                  <%= link_to("Dadmin 选单", dadmin_dproducts_path ) %>
                </li>
                <li>
                  <%= link_to("d订单列表", account_dorders_path ) %>
                </li>
                <li>
                  <%= link_to("我的订单", account_orders_path ) %>
                </li>
              <% end %>
              <li> <%= link_to("登出", destroy_user_session_path, method: :delete) %> </li>
            </ul>
          </div>
        <% end %>
<!-- product 分类 -->
        <ul class="nav navbar-nav navbar-left">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-e panded="false">分类<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
             <% Category.all.each do |category| %>
               <li>
                <%= link_to(category.name, products_path(category: category.name)) %>
              </li>
            <% end %>
           </ul>
          </li>
       </ul>
       <!-- dproduct 分类 -->
       <ul class="nav navbar-nav navbar-left">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-e panded="false">d分类<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
         <% Dcategory.all.each do |dcategory| %>
           <li>
            <%= link_to(dcategory.name, dproducts_path(dcategory: dcategory.name)) %>
          </li>
        <% end %>
       </ul>
      </li>
   </ul>

      </ul>
      <%= form_tag search_products_path , :method => :get do %><!--==搜索===-->
        <div class="input-group pull-right" id="search-id" >
          <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="用你想要的底料">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid"><!--==logo/按钮===-->
  <div class="row row-nav-2">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <img src='<%= image_url 'logo1.png' %>' class="img-nav-1">
      <%= link_to("首页啦", root_path, id: "btn-nav-2") %>
      <%= link_to("底料们", products_path, id: "btn-nav-2") %>
      <%= link_to carts_path, id: "btn-nav-2" do  %>
        实验室 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
      <% end %>
      &nbsp;<%= link_to("黑暗料理", dproducts_path, id: "btn-nav-3") %>
    </div>
  </div>
</div>

