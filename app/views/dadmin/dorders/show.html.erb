<div class="row">
   <div class="col-md-12">

    <h2> 订单明细 (<%= render_dorder_paid_state(@dorder) %>) </h2>
    <%= render "dadmin/dorders/state_option", order: @dorder %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>

        <% @dproduct_lists.each do |dproduct_list| %>
          <tr>
            <td>
              <%= dproduct_list.dproduct_name %>
            </td>
            <td>
              <%= dproduct_list.dproduct_price %>
            </td>
            <td>
              <%= dproduct_list.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
       总计 <%= @dorder.total %> CNY
       </span>
     </div>

     <hr>

     <h2> 寄送资讯 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @dorder.billing_name %> - <%= @dorder.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @dorder.shipping_name %> - <%= @dorder.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
